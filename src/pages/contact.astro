      <div class="flex flex-wrap justify-center gap-4">
        <a href="tel:+91XXXXXXXXXX" class="btn btn-secondary btn-lg text-white">
          üìû Call Now
        </a>
        <a href="https://wa.me/" target="_blank" rel="noopener noreferrer" class="btn btn-outline btn-lg text-white hover:bg-white hover:text-primary">
          üí¨ WhatsApp
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

