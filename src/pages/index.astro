---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Goldmine Masterbatch - Premium Polymer Solutions">
  <Navbar />
  
  <Hero 
    subtitle="Trusted by Industry Leaders"
    title="Transforming Polymers into Industrial Gold"
    description="Precision-engineered masterbatches that deliver unmatched quality, consistency, and performance. From color to function, we engineer excellence into every pellet."
    ctaText="Request Sample"
    ctaLink="#contact"
    ctaText2="View Products"
    ctaLink2={`${base}products`}
  />

  <!-- Features Grid -->
  <section class="py-12 md:py-16 bg-base-100">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Why Industry Leaders Choose <span class="text-gradient">Goldmine</span>
        </h2>
        <p class="text-lg text-base-content/60 max-w-2xl mx-auto">
          Delivering consistency and innovation across 25+ countries
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card bg-base-200 card-hover">
          <div class="card-body">
            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="card-title">Consistent Quality</h3>
            <p class="text-base-content/70">
              Every batch tested with spectrophotometer and MFI analysis. Zero deviation guaranteed.
            </p>
          </div>
        </div>

        <div class="card bg-base-200 card-hover">
          <div class="card-body">
            <div class="w-12 h-12 rounded-lg bg-secondary/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="card-title">Advanced Technology</h3>
            <p class="text-base-content/70">
              Coperion & Leistritz twin-screw extruders for superior dispersion and uniformity.
            </p>
          </div>
        </div>

        <div class="card bg-base-200 card-hover">
          <div class="card-body">
            <div class="w-12 h-12 rounded-lg bg-accent/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="card-title">72-Hour Turnaround</h3>
            <p class="text-base-content/70">
              Custom samples delivered in just 3 days. Test before you commit to production.
            </p>
          </div>
        </div>

        <div class="card bg-base-200 card-hover">
          <div class="card-body">
            <div class="w-12 h-12 rounded-lg bg-success/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
              </svg>
            </div>
            <h3 class="card-title">Sustainable Manufacturing</h3>
            <p class="text-base-content/70">
              Solar-powered operations reducing COâ‚‚ emissions while maintaining premium quality.
            </p>
          </div>
        </div>

        <div class="card bg-base-200 card-hover">
          <div class="card-body">
            <div class="w-12 h-12 rounded-lg bg-info/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-info" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <h3 class="card-title">Custom R&D</h3>
            <p class="text-base-content/70">
              In-house lab developing tailored formulations for your specific polymer needs.
            </p>
          </div>
        </div>

        <div class="card bg-base-200 card-hover">
          <div class="card-body">
            <div class="w-12 h-12 rounded-lg bg-warning/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="card-title">Global Reach</h3>
            <p class="text-base-content/70">
              Serving 25+ countries with reliable supply chains and localized technical support.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Banner -->
  <section class="py-16 md:py-20 bg-gradient-primary">
    <div class="container-custom text-center text-white">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
        Ready to Experience Unmatched Quality?
      </h2>
      <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
        Get your custom sample within 72 hours and see the Goldmine difference.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a href="#contact" class="btn btn-lg bg-white text-primary hover:bg-base-200">
          Request Sample
        </a>
        <a href={`${base}products`} class="btn btn-lg btn-outline text-white border-white hover:bg-white/10">
          View Products
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section id="contact" class="py-16 md:py-20 bg-base-100">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Get in Touch</h2>
          <p class="text-lg text-base-content/60">
            Fill out the form and we'll respond within 24 hours
          </p>
        </div>
        
        <div class="card bg-base-200 shadow-xl">
          <div class="card-body">
            <div class="grid md:grid-cols-2 gap-6">
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Full Name</span>
                </label>
                <input type="text" placeholder="John Doe" class="input input-bordered" />
              </div>
              
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Email</span>
                </label>
                <input type="email" placeholder="john@company.com" class="input input-bordered" />
              </div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-6">
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Phone</span>
                </label>
                <input type="tel" placeholder="+1 234 567 8900" class="input input-bordered" />
              </div>
              
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">Company</span>
                </label>
                <input type="text" placeholder="Your Company Ltd." class="input input-bordered" />
              </div>
            </div>
            
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Product Interest</span>
              </label>
              <select class="select select-bordered">
                <option disabled selected>Select a product</option>
                <option>White Masterbatch</option>
                <option>Black Masterbatch</option>
                <option>Color Masterbatch</option>
                <option>Additive Masterbatch</option>
                <option>Filler Masterbatch</option>
                <option>Custom Formulation</option>
              </select>
            </div>
            
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Message</span>
              </label>
              <textarea class="textarea textarea-bordered h-32" placeholder="Tell us about your requirements..."></textarea>
            </div>
            
            <div class="form-control mt-6">
              <button class="btn btn-lg btn-gradient">
                Send Message
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
