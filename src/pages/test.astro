import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en" data-theme="goldmine">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Test DaisyUI</title>
</head>
<body>
  <div class="p-8">
    <h1 class="text-4xl font-bold mb-8 text-primary">Test Page</h1>
    
    <div class="alert alert-info mb-4">
      <span>If you see styled components below, DaisyUI is working!</span>
    </div>
    
    <div class="flex gap-4 mb-8">
      <button class="btn btn-primary">Primary Button</button>
      <button class="btn btn-secondary">Secondary</button>
      <button class="btn btn-accent">Accent</button>
    </div>
    
    <div class="card bg-base-200 shadow-xl w-96">
      <div class="card-body">
        <h2 class="card-title">Card Title</h2>
        <p>If you see this card with styling, everything is working!</p>
        <div class="badge badge-primary">Primary Badge</div>
      </div>
    </div>
  </div>
</body>
</html>

