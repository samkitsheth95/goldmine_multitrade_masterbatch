---
const navItems = [
  { name: 'Home', href: '/' },
  { 
    name: 'Products', 
    href: '/products',
    submenu: [
      { name: 'White Masterbatch', href: '/products/white' },
      { name: 'Black Masterbatch', href: '/products/black' },
      { name: 'Color Masterbatch', href: '/products/color' },
      { name: 'Additive Masterbatch', href: '/products/additive' },
      { name: 'Filler Masterbatch', href: '/products/filler' },
    ]
  },
  { name: 'Applications', href: '/applications' },
  { name: 'Innovation', href: '/innovation' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' },
];
---

<nav class="navbar glass-effect border-b border-base-300 sticky top-0 z-50 shadow-sm">
  <div class="container-custom">
    <div class="flex-1">
      <div class="dropdown lg:hidden">
        <div tabindex="0" role="button" class="btn btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
          </svg>
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-64 p-2 shadow-xl border border-base-300">
          {navItems.map(item => (
            item.submenu ? (
              <li>
                <details>
                  <summary class="font-medium">{item.name}</summary>
                  <ul>
                    {item.submenu.map(subItem => (
                      <li><a href={subItem.href} class="text-sm">{subItem.name}</a></li>
                    ))}
                  </ul>
                </details>
              </li>
            ) : (
              <li><a href={item.href} class="font-medium">{item.name}</a></li>
            )
          ))}
        </ul>
      </div>
      
      <a href="/" class="flex items-center gap-3 px-2">
        <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-primary to-secondary flex items-center justify-center">
          <span class="text-white font-bold text-xl">G</span>
        </div>
        <div class="flex flex-col">
          <span class="font-bold text-lg leading-none">Goldmine</span>
          <span class="text-xs text-base-content/60">Masterbatch</span>
        </div>
      </a>
    </div>
    
    <div class="flex-none hidden lg:flex">
      <ul class="menu menu-horizontal px-1 gap-1">
        {navItems.map(item => (
          item.submenu ? (
            <li>
              <details>
                <summary class="font-medium">{item.name}</summary>
                <ul class="bg-base-100 rounded-box z-[1] w-56 p-2 shadow-xl border border-base-300">
                  {item.submenu.map(subItem => (
                    <li><a href={subItem.href}>{subItem.name}</a></li>
                  ))}
                </ul>
              </details>
            </li>
          ) : (
            <li><a href={item.href} class="font-medium">{item.name}</a></li>
          )
        ))}
      </ul>
    </div>
    
    <div class="flex-none flex items-center gap-2 ml-4">
      <label class="swap swap-rotate btn btn-ghost btn-circle">
        <input type="checkbox" class="theme-controller" value="dark" />
        <svg class="swap-off fill-current w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/>
        </svg>
        <svg class="swap-on fill-current w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/>
        </svg>
      </label>
      <a href="#contact" class="btn btn-primary text-white">Get Started</a>
    </div>
  </div>
</nav>

<script>
  const themeController = document.querySelector('.theme-controller');
  const html = document.documentElement;
  
  const currentTheme = localStorage.getItem('theme') || 'light';
  html.setAttribute('data-theme', currentTheme);
  if (themeController && currentTheme === 'dark') {
    (themeController as HTMLInputElement).checked = true;
  }
  
  if (themeController) {
    themeController.addEventListener('change', (e) => {
      const theme = (e.target as HTMLInputElement).checked ? 'dark' : 'light';
      html.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    });
  }
</script>
