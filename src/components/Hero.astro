---
interface Props {
  title: string;
  subtitle?: string;
  description: string;
  ctaText?: string;
  ctaLink?: string;
  ctaText2?: string;
  ctaLink2?: string;
}

const { 
  title, 
  subtitle, 
  description, 
  ctaText, 
  ctaLink,
  ctaText2,
  ctaLink2
} = Astro.props;
---

<section class="py-6 md:py-10 lg:py-12 bg-gradient-to-br from-base-100 via-primary/5 to-secondary/5">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-8 md:gap-12 items-center">
      <div class="space-y-4 md:space-y-6">
        {subtitle && (
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 text-primary font-medium text-sm">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            {subtitle}
          </div>
        )}
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight">
          {title.split(' ').map((word) => 
            word.toLowerCase().includes('gold') ? 
            <span class="text-gradient">{word} </span> : 
            <span>{word} </span>
          )}
        </h1>
        
        <p class="text-lg md:text-xl text-base-content/70 leading-relaxed">
          {description}
        </p>
        
        <div class="flex flex-wrap gap-4">
          {ctaText && ctaLink && (
            <a href={ctaLink} class="btn btn-lg btn-gradient gap-2">
              {ctaText}
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </a>
          )}
          {ctaText2 && ctaLink2 && (
            <a href={ctaLink2} class="btn btn-lg btn-outline">
              {ctaText2}
            </a>
          )}
        </div>
        
        <div class="flex flex-wrap gap-8 pt-4">
          <div>
            <div class="text-3xl font-bold text-gradient">25+</div>
            <div class="text-sm text-base-content/60">Countries</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-gradient">10K+</div>
            <div class="text-sm text-base-content/60">Tonnes/Year</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-gradient">500+</div>
            <div class="text-sm text-base-content/60">Formulations</div>
          </div>
        </div>
      </div>
      
      <div class="relative">
        <div class="aspect-square rounded-3xl bg-gradient-to-br from-primary/20 to-secondary/20 p-8 flex items-center justify-center shadow-2xl">
          <div class="text-8xl md:text-9xl font-black text-gradient opacity-20">GM</div>
        </div>
        <div class="absolute -bottom-6 -right-6 w-64 h-64 bg-accent/10 rounded-full blur-3xl -z-10"></div>
        <div class="absolute -top-6 -left-6 w-64 h-64 bg-primary/10 rounded-full blur-3xl -z-10"></div>
      </div>
    </div>
  </div>
</section>
